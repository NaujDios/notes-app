<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=delete" method="post">
                <input type="hidden" name="_method" value="delete">
                    <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card text-center">
        <div class="card-body">
            <h1>Hello {{user.name}}</h1>
            <p class="lead">There aren't notes yet.</p>
            <a href="/notes/add" class="btn btn-success w-30">Create One</a>
        </div>
    </div>
    {{/each}}
</div>